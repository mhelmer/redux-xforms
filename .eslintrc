{
  "extends": "react-app",
  "env": {
    "browser": true,
	"node": true,
	"jest": true
  },
  "rules": {
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 0,
    "no-class-assign": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-wrap-multilines": 2,
    "comma-dangle": ["error", "always-multiline"],
	"no-trailing-spaces": 2
  },
  "plugins": [
    "react"
  ]
}
